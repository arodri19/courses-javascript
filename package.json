    "apollo-server-express": "^3.10.2",
    "bcrypt": "^5.0.1",
    "express": "^4.18.1",
    "fast-glob": "^3.2.12",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.18.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
